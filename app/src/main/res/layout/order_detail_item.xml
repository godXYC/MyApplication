<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="16dp"
    android:id="@+id/detail_relative"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <ImageView
        android:id="@+id/good_img"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginLeft="24dp"
        />
    <TextView
        android:id="@+id/good_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/good_img"
        android:layout_marginLeft="16dp"
        android:maxWidth="176dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:lineSpacingExtra="6dp"
        android:textColor="#222222"

        />
    <TextView
        android:id="@+id/good_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:textColor="#666666"
        />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="112dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/current_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/good_message"
            android:layout_toRightOf="@id/good_img"
            android:textColor="#f4523b"
            android:textSize="14dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            />
    </LinearLayout>



</RelativeLayout>