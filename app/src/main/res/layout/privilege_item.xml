<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="72dp">

    <ImageView
        android:id="@+id/icon_enjoy_privileges"
        android:src="@drawable/icon_enjoy_privileges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="32dp"/>
    <TextView
        android:id="@+id/privilege_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#222222"
        android:textSize="16sp"
        android:layout_toRightOf="@id/icon_enjoy_privileges"
        android:layout_marginLeft="16dp"
        />
    <TextView
        android:id="@+id/privilege_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_toRightOf="@id/icon_enjoy_privileges"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/privilege_name"
        android:layout_marginTop="8dp"/>
</RelativeLayout>