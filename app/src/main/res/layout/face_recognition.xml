<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >
        <ImageView
            android:id="@+id/face_close_img"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="14.5dp"
            android:layout_marginTop="14.5dp"
            android:src="@drawable/close"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="人脸认证"
            android:textSize="18dp"
            android:textColor="#222222"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#ededed" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/face_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="44dp"
        android:src="@drawable/img" />

        <TextView
            android:id="@+id/face_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传人脸识别照"
            android:textSize="16sp"
            android:textColor="#222222"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            />


    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView

            android:id="@+id/no_show_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本人清晰正脸照(不公开)"
            android:textColor="#aaaaaa"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/no_show_face"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:textColor="#00a0e9"
            android:text="查看上传规范"/>

    </LinearLayout>
    
    <Button
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:textColor="#000"
        android:background="#ffc814"
        android:text="人脸认证"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>