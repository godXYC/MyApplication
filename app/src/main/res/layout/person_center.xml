<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wx_demo.myapplication.MainActivity">
    <include layout="@layout/title" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="116dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:id="@+id/relativeLayout">


            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="呼啦啦啦哗啦啦"
                android:textColor="#222222"
                android:textSize="28sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/userName"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/icon_gold" />

            <TextView
                android:id="@+id/userPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userName"
                android:layout_marginTop="12dp"
                android:text="186****8674"
                android:textColor="#aaaaaa"
                android:textSize="14sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img">

        </ImageView>

    </RelativeLayout>

    <include android:id="@+id/include1" layout="@layout/personal_item" />
    <include android:id="@+id/include2" layout="@layout/personal_item_face" />
    <include android:id="@+id/include3" layout="@layout/personal_item_credit" />

</LinearLayout>


